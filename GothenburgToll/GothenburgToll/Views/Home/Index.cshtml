@model ViewTollVM
<h1>Enter license plate:</h1>
<form asp-action="Home" class="addTollForm">
    <input asp-for="LicensePlate" />
    <span asp-validation-for="LicensePlate"></span>
    <br />
    <button type="submit" asp-action="ViewToll" formmethod="get" asp-for-LicensePlate="Licenseplate">View total toll</button>
    <br />
    <br />
    <button type="submit" asp-action="Index" formmethod="post" asp-for-LicensePlate="Licenseplate">Add new toll</button>
</form>